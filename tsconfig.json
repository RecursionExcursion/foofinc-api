{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./build",
        "strict": true,
        "noImplicitAny": true,
        "baseUrl": "./src",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "lib": [
        "es2015"
    ],
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "pre-scripts/actionImports.js"
    ]
}